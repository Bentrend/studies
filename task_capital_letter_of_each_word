function jordan() {
    let array = str.split(" ");
    console.log(array);
    let arrayText = [];
    for (let temp of array) {
        let text = temp[0].toUpperCase() + temp.slice(1);
        arrayText.push(text);
        console.log(text);
    }
    let lastStr = arrayText.join(" ");
    console.log(lastStr);
}

let str = "How can mirrors be real if our eyes aren't real";

jordan(str);
